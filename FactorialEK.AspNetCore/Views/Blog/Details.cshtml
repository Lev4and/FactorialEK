@model News
<section class="blog-grid-area">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-12">
                <div class="post-details-content">
                    <div class="post-details-body">
                        <div class="content">
                            <h4>@Model.Title</h4>
                            <ul class="meta">
                                <li class="date">@Model.CreatedAt.ToLongDateString()</li>
                            </ul>
                            <div>@Html.Raw(Model.Description)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<header class="header-area header-default sticky-header">
   <div class="container">
      <div class="row align-items-center">
         <div class="col-5 col-sm-3 col-md-3 col-lg-2 pr-0">
            <div class="header-logo-area">
               <a asp-controller="Home" asp-action="Index">
               <img class="logo-main" src="~/images/main/factorial.png" alt="Logo"/>
               <img class="logo-light" src="~/images/main/factorial.png" alt="Logo"/>
               </a>
            </div>
         </div>
         <div class="col-7 col-sm-9 col-md-9 col-lg-10">
            <div class="header-align">
               <div class="header-navigation-area">
                  <ul class="main-menu nav justify-content-center">
                     <li>
                        <a asp-controller="Home" asp-action="Index">Главная</a>
                     </li>
                        @await Component.InvokeAsync("CategoriesManufacturingOrService")
                     <li>
                        <a asp-area="" asp-controller="Blog" asp-action="Index">Новости</a>
                     </li>
                     <li class="has-submenu">
                         <a asp-area="" asp-controller="AboutUs" asp-action="Index">О компании</a>
                         <ul class="submenu-nav">
                            <li><a asp-area="" asp-controller="AboutUs" asp-action="ForDistributors">Дистрибьюторам</a></li>
                            <li><a asp-area="" asp-controller="AboutUs" asp-action="Certificates">Сертификаты</a></li>
                         </ul>
                     </li>
                     <li><a asp-area="" asp-controller="Contacts" asp-action="Index">Контакты</a></li>
                  </ul>
               </div>
               <div class="header-action-area">
                  <div class="header-action-usermenu">
                     <div class="icon-usermenu"><i class="ti-settings"></i></div>
                     <ul class="user-menu">
                        <li><a asp-controller="Account" asp-action="Login">Войти</a></li>
                     </ul>
                  </div>
                  <button class="btn-menu d-lg-none">
                  <span></span>
                  <span></span>
                  <span></span>
                  </button>
               </div>
            </div>
         </div>
      </div>
   </div>
</header>